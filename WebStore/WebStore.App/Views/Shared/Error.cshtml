@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

@*<h1 class="text-danger">Error</h1>*@
<h2 class="text-danger">@Model.StoreName : @Model.Message</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}
@Html.ActionLink($"Back to {Model.StoreName} Store Page", "Order", "Customer", new { id = TempData.Peek("CustomerID"), storeName = Model.StoreName })
@Html.ActionLink("Back To Customer Page", "Details", "Customer", new { id = TempData.Peek("CustomerID") })
